@page
@model OdeToFood.Pages.Restaurants.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit @Model.Restaurant.Name</h2>

<form method="post">
    <input type="hidden" asp-for="Restaurant.Id" />
    <div class="form-group">
        <label asp-for="Restaurant.Name"></label>
        <input asp-for="Restaurant.Name" />
    </div>
    <div class="form-group">
        <label asp-for="Restaurant.Location"></label>
        <input asp-for="Restaurant.Location" />
    </div>
    <div class="form-group">
        <label asp-for="Restaurant.CuisineType"></label>
        <select class="form-control" asp-for="Restaurant.CuisineType" asp-items="Model.Cuisines">

        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

